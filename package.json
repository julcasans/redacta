{
  "name": "redacta",
  "version": "2.0.0",
  "description": "CLI tool for generating blog posts, summaries, and enriched documents from video transcripts.",
  "main": "dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./index.node.js": "./dist/index.node.js"
  },
  "dependencies": {
    "@github/copilot-sdk": "^0.1.23",
    "dotenv": "^17.3.0",
    "ink": "^6.7.0",
    "react": "^19.2.4",
    "yargs": "^17.7.2"
  },
  "scripts": {
    "test": "vitest",
    "build": "rimraf dist && tsc && vite build",
    "start": "node dist/redacta.js"
  },
  "keywords": [
    "cli",
    "transcription",
    "blog",
    "summary",
    "copilot",
    "llm"
  ],
  "author": "Julio E. Castillo Anselmi",
  "license": "MIT",
  "type": "module",
  "bin": {
